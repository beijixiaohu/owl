/*底栏样式*/
.footer-wrapper{
    background:#fff0 !important;
    justify-content: center !important;
}


/*侧边栏修正*/
.has-anchor .page:not(.blog){
    padding-right: 0rem !important;
}
#anchor .anchor-wrapper{
    margin: 0px 20px 0px 0px;
}


/*滑动条颜色*/
body {
    --accent-color:#dad2d3fc;
}

/*提示块*/
p {
    color: #6a6969ad;
}

.custom-block.tip {
    border-color: #f8f8f8 !important;
}

/*按钮颜色*/
.bttn-pill.bttn-success {
    background: #0f03004a;
}


/*播放器颜色修改*/
span.aplayer-list-title {
    color: #333333;
    font: bold;
}

/*代码块复制按钮隐藏*/
button.copy-code-button{
    width: 0px;height: 0px;overflow: hidden;
}
div[class*='language-'] .copy-code-button{
    padding: 0px 8px;
}

/*链接颜色修改*/
a {
    color:#2b377bfc;
}

.custom-block.info {
    border-color: #f8f8f8 !important;
}

.custom-block.info::before {
    content: url() !important;
}

hr {
    border: 0;
    border-top: 0px solid var(--border-color);
}

/*隐藏提交信息*/
.meta-item.update-time,footer.page-meta,.meta-item.contributors{
    width: 0px;height: 0px;overflow: hidden; 
}

/*下载按钮间距调整*/
button.bttn-pill.bttn-sm.bttn-success {
    margin: 0px 0px 7px 0px;
}